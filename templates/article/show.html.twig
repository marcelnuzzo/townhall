{% extends 'admin/base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <section>
        <a href="{{ path('article_index') }}" class="btn btn-delete mx-3 my-3" role="button" aria-pressed="true">Retour</a>
        
        <div class="container">
            <div class="text-center">
                <h1>Article</h1>
            </div>

            <div class="mt-3">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Titre</th>
                            <td>{{ article.title }}</td>
                        </tr>
                        <tr>
                            <th>Catégorie</th>
                            <td>{{ article.category }}</td>
                        </tr>
                        <tr>
                            <th>Résumé</th>
                            <td>{{ article.summary }}</td>
                        </tr>
                        <tr>
                            <th>Contenu</th>
                            <td>{{ article.content }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>{{ article.image }}</td>
                        </tr>
                        <tr>
                            <th>Publié le </th>
                            <td>{{ article.publishedat ? article.publishedat|date('d-m-Y H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-end">
                <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-secondary mr-2" role="button" aria-pressed="true">Modifier</a>
                {{ include('article/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
