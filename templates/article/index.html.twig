{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>
	<p><a href="{{ path('article_new') }}">Publier un article</a></p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Catégorie</th>
                <th>Résumé</th>
                <th>Image</th>
                <th>Publié</th>
				<th>Voir</th>
                <th>Modifier</th>
				<th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.category }}</td>
                <td>{{ article.summar }}</td>
                <td>
				{% if article.imageName is not null %}
				<img src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="photo de l'article" width="64"/>
			{% else %}
			Aucune image enregistrée.
			{% endif %}
                </td>
                <td>{{ article.publishedat ? article.publishedat|date('d/m/Y H:i') : '' }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">Voir</a>
				</td>
				<td>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
                </td>
				<td>
					<a href="{{ path('article_delete', {'id': article.id}) }}">Supprimer</a>
				</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucun article enregistré.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}