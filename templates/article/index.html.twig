{% extends 'base.html.twig' %}

{% block title %}Gestion des articles{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>
	<p><a href="{{ path('article_new') }}">Publier un article</a></p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Catégorie</th>
                <th>Résumé</th>
                <th>Contenu</th>
                <th>Image</th>
                <th>Date de publication</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.category }}</td>
                <td>{{ article.summary }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.image }}</td>
                <td>{{ article.publishedat ? article.publishedat|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">Voir</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun article enregistré.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}