<div class="mt-5">
    {{ form_start(form) }}

        <div class="form-outline mb-4">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="row mb-4">
            <div class="col">
                <div class="form-outline mb-4">
                {#
                    {{ form_label(form.logoName) }}</br>
                    {{ form_widget(form.logoName, {'attr': {'class': 'form-control'}}) }}
                    #}
                </div>
            </div>
            <div class="col">
                <div class="form-outline mb-4">
                    {{ form_label(form.logoFile) }}</br>
                    {{ form_widget(form.logoFile) }}
                </div>
            </div>
        </div>
		{% if form.school_type is defined %}
		<div class="form-outline mb-4">
            {{ form_label(form.school_type) }}
            {{ form_widget(form.school_type, {'attr': {'class': 'form-control'}}) }}
        </div>
		{% endif %}

        <div class="form-outline mb-4">
            {{ form_label(form.summar) }}
            {{ form_widget(form.summar, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-outline mb-4">
            {{ form_label(form.content) }}
            {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="row mb-4">
            <div class="col">
                <div class="form-outline mb-4">
                    {{ form_label(form.postaladdress) }}
                    {{ form_widget(form.postaladdress, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col">
                <div class="form-outline mb-4">
                    {{ form_label(form.phone) }}
                    {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col">
                <div class="form-outline mb-4">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col">
                <div class="form-outline mb-4">
                    {{ form_label(form.website) }}
                    {{ form_widget(form.website, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        <div class="form-outline mb-4">{#
            {{ form_label(form.user) }}
            {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}#}
        </div>

        <div class="justify-content-end">
            <button class="btn btn-secondary">{{ infrastructure.id ? 'Modifier' : 'Cr√©er' }}</button>
        </div>
    {{ form_end(form) }}
</div>
