{% extends 'base.html.twig' %}

{% block title %}Gestion des {{ structure }}s{% endblock %}

{% block body %}
    <h1>Gestion des {{ structure }}s</h1>
	<p><a href="{{ path('structure_new', {'structure': structure }) }}">Ajouter</a></p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Logo</th>
                <th>Description</th>
                <th>Date cr√©ation</th>
                <th>Voir</th>
				<th>Modifier</th>
				<th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for structure in structures %}
            <tr>
                <td>{{ structure.id }}</td>
                <td>{{ structure.name }}</td>
                <td>{{ structure.logo }}</td>
                <td>{{ structure.summary }}</td>
                <td>{{ structure.createdat }}</td>
                <td>
                    <a href="{{ path('structure_show', {'structure': structure.organizationType}) }}">Voir</a>
					</td>
					<td>
                    <a href="{{ path('structure_edit', {'structure': structure.organizationType, 'id': structure.id}) }}">Modifier</a>
                </td>
				<td>
				{{ include('structure/_delete_form.html.twig') }}
				</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun enregistrement.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
